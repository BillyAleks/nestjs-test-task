{
  "name": "car-data-center-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "db:migration:create": "ts-node ./node_modules/.bin/typeorm migration:create -n ",
    "db:migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate -n ",
    "db:migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "db:schema:drop": "ts-node ./node_modules/.bin/typeorm schema:drop",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run db:migration:run && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:docker-prod": "sleep 10 && npm run db:migration:run && npm run start:prod",
    "start:db": "docker-compose --file docker-compose.db.yml up --build",
    "stop:db": "docker-compose --file docker-compose.db.yml stop; docker-compose --file docker-compose.db.yml rm -f -s;",
    "start:docker-app": "docker-compose up",
    "start:docker-app:testfree": "docker-compose --file docker-compose.testfree.yml up",
    "stop:docker-app": "docker-compose stop; docker-compose rm -f -s;",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "sleep 10 && jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest.config.json",
    "test:e2e:run-test:normal": "jest -i test/NormalScenario --watch -c test/jest.config.json",
    "test:e2e:run-test:exception": "jest -i test/ExceptionScenario --watch -c test/jest.config.json",
    "test:e2e:run": "sleep 15 && jest -i test --watch -c test/jest.config.json "
  },
  "dependencies": {
    "@nestjs/common": "^6.11.7",
    "@nestjs/config": "^0.2.2",
    "@nestjs/core": "^6.10.14",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/schedule": "^0.2.0",
    "@nestjs/swagger": "^4.2.8",
    "@nestjs/typeorm": "^6.3.1",
    "@types/cron": "^1.7.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "delay": "^4.3.0",
    "moment": "^2.24.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.11.7",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
